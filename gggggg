    <!-- ============================================== -->
    <!-- APPLICATION LOGIC & STATE MANAGEMENT           -->
    <!-- ============================================== -->

    <script>
        // --- 1. LOCAL STATE MANAGEMENT (Simulating Backend DB) ---
        const DEFAULT_STATE = {
            wallet: { credits: 0, cash: 0.00 },
            claims: {}, // Format: { taskId: [timestamps] }
            lastSpin: null,
            quizDone: false
        };

        const TASKS_DB = [
            { id: 'daily_login', title: 'Daily Login Bonus', desc: 'Log in every day', reward: 5, type: 'daily', limit: 1 },
            { id: 'watch_ad', title: 'Watch Advertisement', desc: 'Watch a 30s sponsor ad', reward: 15, type: 'daily', limit: 3 },
            { id: 'social_share', title: 'Share on Social Media', desc: 'Share your referral link', reward: 10, type: 'daily', limit: 1 },
            { id: 'complete_profile', title: 'Complete Profile', desc: 'Add avatar & phone number', reward: 50, type: 'once', limit: 1 }
        ];

        let appState = JSON.parse(localStorage.getItem('billo_state')) || DEFAULT_STATE;

        function saveState() {
            localStorage.setItem('billo_state', JSON.stringify(appState));
            updateWalletUI();
        }

        function updateWalletUI() {
            document.getElementById('ui-credits').innerText = appState.wallet.credits;
            document.getElementById('ui-cash').innerText = '$' + appState.wallet.cash.toFixed(2);
        }

        // Initialize UI on load
        updateWalletUI();

        // --- 2. UTILITY FUNCTIONS ---
        function toggleModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal.classList.contains('active')) {
                modal.classList.remove('active');
            } else {
                // Close others
                document.querySelectorAll('.modal').forEach(m => m.classList.remove('active'));
                modal.classList.add('active');
                if(modalId === 'tasks-modal') renderTasks();
            }
        }

        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast border-l-4 ${type === 'success' ? 'border-green-500' : type === 'error' ? 'border-red-500' : 'border-[#00d9ff]'}`;
            toast.innerHTML = `<div class="font-bold text-white text-sm">${message}</div>`;
            container.appendChild(toast);
            
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100%)';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        function copyCode(id) {
            const text = document.getElementById(id).innerText;
            navigator.clipboard.writeText(text);
            showToast('Code copied to clipboard!');
        }

        // Confetti Effect
        function fireConfetti() {
            const colors = ['#00d9ff', '#ffffff', '#004455', '#3b82f6'];
            for(let i=0; i<60; i++) {
                const conf = document.createElement('div');
                conf.style.position = 'fixed';
                conf.style.left = 50 + (Math.random() * 20 - 10) + 'vw';
                conf.style.top = '50vh';
                conf.style.width = (Math.random() * 10 + 5) + 'px';
                conf.style.height = (Math.random() * 10 + 5) + 'px';
                conf.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                conf.style.zIndex = '9999';
                conf.style.pointerEvents = 'none';
                conf.style.borderRadius = Math.random() > 0.5 ? '50%' : '2px';
                document.body.appendChild(conf);

                // Animate
                const angle = Math.random() * Math.PI * 2;
                const velocity = 15 + Math.random() * 15;
                const tx = Math.cos(angle) * velocity * 20;
                const ty = Math.sin(angle) * velocity * 20 + 200; // +gravity
                
                conf.animate([
                    { transform: 'translate(0,0) rotate(0deg)', opacity: 1 },
                    { transform: `translate(${tx}px, ${ty}px) rotate(${Math.random()*720}deg)`, opacity: 0 }
                ], { duration: 1500 + Math.random()*1000, easing: 'cubic-bezier(.37,0,.63,1)' });

                setTimeout(() => conf.remove(), 2500);
            }
        }

        // --- 3. TASK SYSTEM LOGIC ---
        function getTaskClaimsCount(taskId) {
            const claims = appState.claims[taskId] || [];
            const task = TASKS_DB.find(t => t.id === taskId);
            
            if (task.type === 'once') return claims.length;
            
            // For daily, count claims today
            const todayStr = new Date().toDateString();
            return claims.filter(timestamp => new Date(timestamp).toDateString() === todayStr).length;
        }

        function renderTasks() {
            const list = document.getElementById('tasks-list');
            list.innerHTML = '';

            TASKS_DB.forEach(task => {
                const claimsCount = getTaskClaimsCount(task.id);
                const isCompleted = claimsCount >= task.limit;
                const progressPct = (claimsCount / task.limit) * 100;

                const taskEl = document.createElement('div');
                taskEl.className = `glass p-4 rounded-xl border ${isCompleted ? 'border-white/10 opacity-60' : 'border-[#00d9ff]/30'} transition-all`;
                
                taskEl.innerHTML = `
                    <div class="flex justify-between items-center mb-3">
                        <div>
                            <h3 class="font-bold text-lg ${isCompleted ? 'text-gray-400' : 'text-white'}">${task.title}</h3>
                            <p class="text-xs text-gray-400">${task.desc}</p>
                        </div>
                        <div class="bg-black/50 px-3 py-1 rounded-lg border border-white/5 flex items-center gap-1">
                            <span class="text-[#00d9ff] font-bold">+${task.reward}</span>
                            <span class="text-xs text-gray-400">CR</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4">
                        <div class="flex-grow progress-bar">
                            <div class="progress-fill ${isCompleted ? 'bg-gray-500 shadow-none' : ''}" style="width: ${progressPct}%"></div>
                        </div>
                        <span class="text-xs text-gray-400 whitespace-nowrap">${claimsCount} / ${task.limit}</span>
                        <button 
                            onclick="claimTask('${task.id}')" 
                            ${isCompleted ? 'disabled' : ''} 
                            class="neon-btn px-4 py-1.5 rounded-lg text-sm font-bold min-w-[80px]">
                            ${isCompleted ? 'DONE' : 'CLAIM'}
                        </button>
                    </div>
                `;
                list.appendChild(taskEl);
            });
        }

        function claimTask(taskId) {
            const task = TASKS_DB.find(t => t.id === taskId);
            if (!task) return;

            const claimsCount = getTaskClaimsCount(taskId);
            if (claimsCount >= task.limit) {
                showToast('Task limit reached!', 'error');
                return;
            }

            // Simulate API Call delay
            setTimeout(() => {
                // Update State
                if (!appState.claims[taskId]) appState.claims[taskId] = [];
                appState.claims[taskId].push(Date.now());
                appState.wallet.credits += task.reward;
                saveState();

                // UI Feedback
                fireConfetti();
                showToast(`Successfully claimed ${task.reward} Credits!`);
                renderTasks();
            }, 300);
        }

        // --- 4. SPIN WHEEL LOGIC ---
        let isSpinning = false;
        
        function executeSpin() {
            if (isSpinning) return;
            
            // Check daily limit
            const todayStr = new Date().toDateString();
            if (appState.lastSpin && new Date(appState.lastSpin).toDateString() === todayStr) {
                showToast('You already spun the wheel today. Come back tomorrow!', 'error');
                return;
            }

            isSpinning = true;
            const wheel = document.getElementById('spin-wheel');
            const btn = document.getElementById('spin-btn');
            btn.disabled = true;
            btn.innerText = 'SPINNING...';

            // Segments mapping (approximate matching to conic gradient)
            // 0-60deg, 60-120deg, etc. Let's just assign random rewards.
            const rewards = [50, 5, 20, 100, 10, 0];
            const resultIndex = Math.floor(Math.random() * rewards.length);
            const reward = rewards[resultIndex];

            // Calculate rotation: 5 full spins + degrees to target segment
            const targetSegmentDegrees = (resultIndex * 60) + 30; // Center of segment
            const totalRotation = (5 * 360) + (360 - targetSegmentDegrees); 

            wheel.style.transform = `rotate(${totalRotation}deg)`;

            setTimeout(() => {
                isSpinning = false;
                btn.disabled = false;
                btn.innerText = 'SPIN THE WHEEL';
                wheel.style.transition = 'none';
                wheel.style.transform = `rotate(${360 - targetSegmentDegrees}deg)`;
                
                // Force reflow
                void wheel.offsetWidth;
                wheel.style.transition = 'transform 4s cubic-bezier(0.17, 0.67, 0.12, 0.99)';

                // Update state
                appState.lastSpin = Date.now();
                if(reward > 0) {
                    appState.wallet.credits += reward;
                    fireConfetti();
                    showToast(`Jackpot! You won ${reward} Credits!`);
                } else {
                    showToast(`Better luck next time!`);
                }
                saveState();
                
            }, 4000);
        }

        // --- 5. TOURNAMENT & QUIZ LOGIC ---
        function joinTournament(name, cost) {
            if (appState.wallet.credits < cost) {
                showToast(`Insufficient Credits. You need ${cost} CR to join.`, 'error');
                // Auto open tasks modal
                setTimeout(() => toggleModal('tasks-modal'), 1000);
                return;
            }

            // Deduct
            appState.wallet.credits -= cost;
            saveState();
            showToast(`Successfully registered for ${name}! Good luck!`);
        }

        function answerQuiz(isCorrect) {
            if (appState.quizDone) {
                showToast('You already answered the daily quiz!', 'error');
                return;
            }

            appState.quizDone = true;
            
            if (isCorrect) {
                appState.wallet.credits += 20;
                fireConfetti();
                showToast('Correct! +20 Credits awarded.');
            } else {
                showToast('Incorrect answer. Try again tomorrow.', 'error');
            }
            
            saveState();
            setTimeout(() => toggleModal('quiz-modal'), 1500);
        }

        function copyReferral() {
            navigator.clipboard.writeText('https://billobattle.zone/ref/USER-8921');
            showToast('Referral link copied!');
        }

        // Daily reset check (simple mock)
        function checkDailyReset() {
            const todayStr = new Date().toDateString();
            if (appState.lastReset !== todayStr) {
                appState.quizDone = false;
                appState.lastReset = todayStr;
                saveState();
            }
        }
        checkDailyReset();

    </script>
</body>
</html>