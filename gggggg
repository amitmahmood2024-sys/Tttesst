-- D1 Database Schema for Billo Battle Zone
CREATE TABLE users (
    user_id TEXT PRIMARY KEY, -- Firebase UID
    username TEXT UNIQUE NOT NULL,
    email TEXT UNIQUE NOT NULL,
    phone TEXT,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE wallets (
    user_id TEXT PRIMARY KEY REFERENCES users(user_id),
    credits INTEGER DEFAULT 0, -- Free credits for tournaments
    cash DECIMAL(10,2) DEFAULT 0.00, -- Withdrawable real money
    total_earned_credits INTEGER DEFAULT 0,
    updated_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE tasks (
    task_id TEXT PRIMARY KEY,
    title TEXT NOT NULL,
    reward INTEGER NOT NULL,
    reset_type TEXT NOT NULL, -- 'daily', 'once'
    max_claims_per_period INTEGER DEFAULT 1,
    is_active BOOLEAN DEFAULT TRUE
);

CREATE TABLE task_claims (
    claim_id INTEGER PRIMARY KEY AUTOINCREMENT,
    user_id TEXT REFERENCES users(user_id),
    task_id TEXT REFERENCES tasks(task_id),
    ip_address TEXT,
    claimed_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE transactions (
    tx_id INTEGER PRIMARY KEY AUTOINCREMENT,
    user_id TEXT REFERENCES users(user_id),
    type TEXT NOT NULL, -- 'credit_earn', 'tournament_entry', 'cash_win'
    amount DECIMAL(10,2) NOT NULL,
    currency TEXT NOT NULL, -- 'credits' or 'cash'
    reference_id TEXT,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP
);

-- Seed Default Tasks
INSERT INTO tasks (task_id, title, reward, reset_type, max_claims_per_period) VALUES
('daily_login', 'Daily Login Bonus', 5, 'daily', 1),
('watch_ad', 'Watch Advertisement', 15, 'daily', 3),
('social_share', 'Share on Social Media', 10, 'daily', 1),
('complete_profile', 'Complete Profile Setup', 50, 'once', 1);
                        </pre>
