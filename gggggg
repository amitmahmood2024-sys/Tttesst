                        </div>
                        <pre id="code-worker" class="bg-[#1e1e1e] p-4 rounded-b-lg border border-gray-800 text-sm text-blue-300 overflow-x-auto">
import { Hono } from 'hono';
import { cors } from 'hono/cors';

const app = new Hono();
app.use('*', cors());

// Middleware: Verify Firebase JWT (Mocked for brevity)
app.use('/api/*', async (c, next) => {
    const token = c.req.header('Authorization');
    if (!token) return c.json({ error: 'Unauthorized' }, 401);
    // In production: verify JWT with Firebase Admin / JWKS
    c.set('userId', 'mock-user-123');
    await next();
});

// GET Wallet Balance
app.get('/api/wallet', async (c) => {
    const userId = c.get('userId');
    const { results } = await c.env.DB.prepare('SELECT credits, cash FROM wallets WHERE user_id = ?').bind(userId).all();
    return c.json(results[0] || { credits: 0, cash: 0 });
});

// POST Claim Task
app.post('/api/tasks/:id/claim', async (c) => {
    const userId = c.get('userId');
    const taskId = c.req.param('id');
    const ip = c.req.header('cf-connecting-ip') || 'unknown';

    // Anti-Abuse: Rate Limiting via KV
    const rlKey = `rl:claim:${userId}`;
    const claimsLastHour = await c.env.KV.get(rlKey) || 0;
    if (parseInt(claimsLastHour) >= 10) return c.json({ error: 'Rate limit exceeded' }, 429);

    // SQL Transaction using Batch
    const db = c.env.DB;
    const task = await db.prepare('SELECT reward, reset_type, max_claims_per_period FROM tasks WHERE task_id = ? AND is_active = 1').bind(taskId).first();
    if (!task) return c.json({ error: 'Task not found' }, 404);

    // Check existing claims logic here (omitted for brevity)
    
    // Execute Claim Batch
    await db.batch([
        db.prepare('INSERT INTO task_claims (user_id, task_id, ip_address) VALUES (?, ?, ?)').bind(userId, taskId, ip),
        db.prepare('UPDATE wallets SET credits = credits + ?, total_earned_credits = total_earned_credits + ? WHERE user_id = ?').bind(task.reward, task.reward, userId),
        db.prepare('INSERT INTO transactions (user_id, type, amount, currency) VALUES (?, ?, ?, ?)').bind(userId, 'credit_earn', task.reward, 'credits')
    ]);

    // Update KV Rate Limit
    await c.env.KV.put(rlKey, parseInt(claimsLastHour) + 1, { expirationTtl: 3600 });
    
    return c.json({ success: true, reward: task.reward });
});

export default app;
